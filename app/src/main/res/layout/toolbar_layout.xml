<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomToolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/green"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

    <ImageButton
        android:id="@+id/favourites"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="10dp"
        android:background="@drawable/noselectedheart"
        android:contentDescription="Button description"
        android:layout_gravity="end" />

    <ImageButton
        android:id="@+id/cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cart"
        app:layout_constraintBottom_toTopOf="@+id/favourites"
        android:contentDescription="Button description"
        android:layout_gravity="end" />

    <ImageButton
        android:id="@+id/main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:background="@drawable/main"
        app:layout_constraintBottom_toTopOf="@+id/cart"
        android:contentDescription="Button description"
        android:layout_gravity="end" />

    <ImageButton
        android:id="@+id/history"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="20dp"
        android:background="@drawable/history"
        app:layout_constraintBottom_toTopOf="@+id/main"
        android:contentDescription="Button description"
        android:layout_gravity="end" />

    <ImageButton
        android:id="@+id/burgerMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="30dp"
        android:background="@drawable/burger"
        android:contentDescription="Menu"
        android:layout_gravity="end"/>

</androidx.appcompat.widget.Toolbar>